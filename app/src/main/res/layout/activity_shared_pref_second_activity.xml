<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show saved Shared Preference"
        android:textAllCaps="false"
        android:id="@+id/sharedPrefShowButton"
        android:layout_below="@+id/sharedPrefButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sharedPrefName"
        android:paddingRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sharedPrefShowButton"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sharedPrefPhn"
        android:paddingRight="10dp"
        android:layout_alignBaseline="@+id/sharedPrefName"
        android:layout_alignBottom="@+id/sharedPrefName"
        android:layout_toEndOf="@+id/sharedPrefName"
        android:layout_marginStart="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:id="@+id/sharedPrefEmail"
        android:layout_toEndOf="@+id/sharedPrefPhn"
        android:layout_alignBottom="@+id/sharedPrefPhn"/>


</RelativeLayout>